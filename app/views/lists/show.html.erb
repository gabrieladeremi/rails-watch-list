<p>Show</p>
<br />

<h3><%= @list.name %></h3>

<%= simple_form_for([@list, @bookmark]) do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>

<div class="bookmarks-container">
<% @list.bookmarks.each do |b| %>
  <div>
    <h2><%= b.movie.title %></h2>
    <p><%= b.comment %></p>
    <p><%= '⭐️' * b.movie.rating %></p>
  </div>

  <%= link_to bookmark_path(b), data: { turbo_method: :delete, turbo_confirm: "Are you sure ?" } do%>
    <button type="button" class="btn btn-danger mb-2">Delete</button>
  <% end %>
<% end %>
</div>

